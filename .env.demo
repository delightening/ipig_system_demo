# ==============================================
# iPig System - Demo Environment Configuration
# ==============================================
# 複製此檔案為 .env 後可直接使用 Demo 模式

# Demo Mode
DEMO_MODE=true

# ==============================================
# Database Configuration
# ==============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ipig_demo
POSTGRES_PORT=5432

# ==============================================
# Backend API Configuration
# ==============================================
HOST=0.0.0.0
PORT=8000
API_PORT=8000

# Database URL (for backend container)
DATABASE_URL=postgres://postgres:postgres@db:5432/ipig_demo
DATABASE_MAX_CONNECTIONS=10
DATABASE_RETRY_ATTEMPTS=10
DATABASE_RETRY_DELAY_SECONDS=3

# JWT Settings
JWT_SECRET=demo_jwt_secret_for_testing_only
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# ==============================================
# External Integrations (Disabled in Demo Mode)
# ==============================================
ENABLE_GOOGLE_SYNC=false
ENABLE_SMTP=false

# SMTP (disabled but required for config)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@demo.local
SMTP_FROM_NAME=iPig Demo

# Google Calendar (disabled in demo)
GOOGLE_CALENDAR_ID=primary

# ==============================================
# Frontend Configuration
# ==============================================
VITE_API_BASE_URL=http://localhost:8000
WEB_PORT=8080

# ==============================================
# Development Settings
# ==============================================
# Auto-seed demo admin user
SEED_DEV_USERS=false

APP_URL=http://localhost:8080
